<!DOCTYPE html>
<html>
<head>
  <title>Tubestock</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://apis.google.com/js/client.js?onload=onClientLoad&key=AIzaSyB7iyk1ZqMmVn2EaSK6Nfnb0nsGuIZDa2A" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div id="nav">
    <% if current_user %>
      <%= "Logged in as: #{current_user.email}." %>
      <%= link_to "Logout", :logout, method: :post %>
    <% else %> | 
      <%= link_to 'Login with Facebook', auth_at_provider_path(:provider => :facebook) %>
    <% end %>
  </div>
  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>
 
<%= yield %>

</body>
</html>
